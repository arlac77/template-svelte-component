{
  "name": "{{name}}",
  "description": "{{description}}",
  "version": "0.0.0-semantic-release",
  "license": "BSD-2-Clause",
  "module": "src/index.mjs",
  "svelte": "^3.16.4",
  "keywords": [
    "svelte"
  ],
  "scripts": {
    "docs": "documentation readme {{module}} --section=API",
    "lint": "documentation lint {{module}}",
    "start": "rollup -c example/rollup.config.js -w",
    "test": "testcafe $BROWSER:headless tests/*-test.js -s test-results --app-init-delay 500 --app \"rollup -c example/rollup.config.js -w\""
  },
  "devDependencies": {
    "acorn-class-fields": "--delete--",

    "rollup": "^1.27.10",
    "rollup-plugin-dev": "^1.1.1",
    "rollup-plugin-svelte": "^5.1.1",
    "@rollup/plugin-node-resolve": "^6.0.0",
    "semantic-release": "^15.13.31",
    "svelte": "^3.16.4",
    "testcafe": "^1.7.0",
    "documentation": "^12.1.4"
  },
  "engines": {
    "node": ">=12.13.1"
  },
  "template": {
    "inheritFrom": "arlac77/npm-package-template",
    "files": [
      {
        "merger": "Readme",
        "pattern": "README.md",
        "options": {
          "badges": [
            {
              "name": "minified size",
              "icon": "https://badgen.net/bundlephobia/min/{{name}}",
              "url": "https://bundlephobia.com/result?p={{name}}"
            },
            {
              "name": "Svelte v3",
              "icon": "https://img.shields.io/badge/svelte-v3-orange.svg",
              "url": "https://svelte.dev"
            }
          ]
        }
      }
    ],
    "usedBy": [
      "arlac77/svelte-common",
      "arlac77/svelte-guard-history-router",
      "arlac77/svelte-log-view",
      "arlac77/svelte-session-manager",
      "arlac77/svelte-time-series",
      "arlac77/svelte-websocket-store"
    ]
  }
}
